    <div class="more-some-book">
        <h3>Khám phá thêm</h3>
        <hr />
        <div class="row">

            @foreach (var item in ViewBag.lstBook)
            {
                <!-- product -->
                <div class="col-lg-3 prod-item">
                    <div class="card" style="width: 18rem;">
                        <a href="@Url.Action("Index/" + item.ID_Book, "DetailBook")"><img class="card-img-top" src="~/Content/Images/@item.Image" alt="Card image cap"></a>
                        <div class="card-body">
                            <a href="#" class="title-prod"> <h5 class="card-title">@item.Book_Name</h5> </a>
                            <h5 style="color: darkred;">@item.PriceHire đ</h5>
                            <p class="card-text rating-card">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <span style="color: black;">(0 đánh giá)</span>
                            </p>
                            <a href="#" class="add-to-cart-btn"><i class="bi bi-cart-plus-fill"></i></a>
                            <a href="#" class="see-detail-prod"><i class="bi bi-eye"></i></a>

                        </div>
                    </div>
                </div>
                <!--end product -->
            }


        </div>
    </div>
    <div class="row" style="justify-content: center; margin:30px auto">
        <a href="#" class="see-more"><h4>Xem thêm</h4></a>
