
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-page">
    <div class="row">
        <div class="col-lg-5">
            <img src="~/Content/Images/@ViewBag.Book.Image" style="width:100%" alt="">
        </div>
        @using (Html.BeginForm("AddToCart", "BookCart", FormMethod.Post, new { @class = "col-lg-7" }))
        {
            @Html.ValidationSummary(true)
            <h3>@ViewBag.Book.Book_Name</h3>

            <p> <b>Tác giả:</b> NXB Kim Đồng</p>
            <p>
                <b>Mô tả:</b>
                - Đầy đủ nhất với 30 CHUYÊN ĐỀ NGỮ PHÁP Trong Tiếng Anh của cô Trang Anh. <br>
                - Dày 606 trang gần 7.000 bài tập - SỐ LƯỢNG BÀI NHIỀU NHẤT. <br>
                - TỔNG ÔN TẬP ngữ pháp tiếng anh - CHẮC CHẮN CÓ trong đề thi.
            </p>


            <div class="input-group mb-3" style="width: 59%; padding: 15px 0;">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Gói thuê ngày</label>
                </div>
                <select class="custom-select" name="DayPackage" id="inputGroupSelect01">
                    <option selected value="0">Chọn gói...</option>
                    <option value="1">1 ngày</option>
                    <option value="2">2 ngày</option>

                    <option value="3">3 ngày</option>
                    <option value="4">4 ngày</option>

                    <option value="5">5 ngày</option>
                    <option value="6">6 ngày</option>

                    <option value="7">7 ngày</option>
                    <option value="8">8 ngày</option>
                    <option value="9">9 ngày</option>


                </select>
            </div>


            <hr style="background-color: black; width: 100%;">
            <p><b style="font-size: 20px;">Tổng tiền: </b></p>
            <p style="font-weight: 600; font-size: 35px; color: rgb(220, 0, 0);">@ViewBag.Book.PriceHire đ</p>
            <input type="hidden" value="@ViewBag.Book.ID_Book" name="IDBook" />

            if(Session["User_Name"] == null)
            {
                <a class="btn btn-rent" style="color:#fff" onclick="location.href = '@Url.Action("Login","LoginRegister")'">Đặt thuê</a>
            }
            else
            {
                <button class="btn btn-rent" style="color:#fff" type="submit">Đặt thuê</button>
            }

        }

