
@{
    ViewBag.Title = "GetBookByCategoryID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-3">


        @*<div class="list-group">
            <a href="#" class="list-group-item list-group-item-action">Sách giáo khoa</a>
            <a href="#" class="list-group-item list-group-item-action">Truyện tranh</a>
