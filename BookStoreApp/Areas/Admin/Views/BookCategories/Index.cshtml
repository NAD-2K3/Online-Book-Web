@model IEnumerable<BookStoreApp.Models.BookCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>Quản lý thể loại sách</h2>

<p>
    <a href="@Url.Action("Create","BookCategories")" class="btn btn-success">Thêm thể loại</a>
</p>
<table class="table">
    <tr>
        <th>
            Thể loại
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_BookCategory)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID_BookCategory }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_BookCategory }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_BookCategory })
            </td>
        </tr>
    }

</table>
