@model IEnumerable<BookStoreApp.Models.HireBook>
@{
    ViewBag.Title = "Report";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h2>Report</h2>

@using (Html.BeginForm("Report", "AdminBook", FormMethod.Post, new { @class = "checkout-form" }))
{
    <label for="date_start">Chọn ngày: </label>
    <input type="date" id="date_start" name="date_start" />
    <label for="date_end">Chọn ngày: </label>
    <input type="date" id="date_end" name="date_end" max="@DateTime.Now" />
    <input type="submit" />


    <table class="table ">
      
        

        <div class="container mt-5">
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4">
                <div class="col">
                    <div class="card radius-10 border-start border-0 border-3 border-danger">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="mb-0 text-secondary">Số lượng người mua</p>
                                    <h4 class="my-1 text-danger">@ViewBag.CustomerQuantity</h4>

                                </div>
                                <div class="widgets-icons-2 rounded-circle bg-gradient-bloody text-white ms-auto">
                                    <i class="fa fa-shopping-cart"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card radius-10 border-start border-0 border-3 border-danger">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="mb-0 text-secondary">Cuốn sách được mua nhiều nhất</p>
                                    <h4 class="my-1 text-danger">@ViewBag.MostRentedBook</h4>

                                </div>
                                <div class="widgets-icons-2 rounded-circle bg-gradient-bloody text-white ms-auto">
                                    <i class="fa fa-dollar"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card radius-10 border-start border-0 border-3 border-danger">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div>
                                    <p class="mb-0 text-secondary">Số lượng sách</p>
                                    <h4 class="my-1 text-danger">@ViewBag.BookQuantity</h4>

                                </div>
                                <div class="widgets-icons-2 rounded-circle bg-gradient-bloody text-white ms-auto">
                                    <i class="fa fa-bar-chart"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="mt-5 mb-5" style="background-color: black"/>
            @foreach(var item in ViewBag.OrderDetail)
            {
                <div class="mt-3 row row-cols-1 row-cols-md-2 row-cols-xl-4">
                    <div class="col">
                        <div style="width: 45%" class="card radius-10 border-start border-0 border-3 border-danger">
                            <div class="card-body">
                                <div class="d-flex align-items-center">
                                    <div>
                                        <p class="mb-0 text-secondary">Sách</p>
                                        <h4 class="my-1 text-danger">@item</h4>

                                    </div>
                                    <div class="widgets-icons-2 rounded-circle bg-gradient-bloody text-white ms-auto">
                                        <i class="fa fa-shopping-cart"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                    }
                </div>

    </table>
}