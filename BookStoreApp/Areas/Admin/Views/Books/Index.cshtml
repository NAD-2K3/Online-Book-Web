@model IEnumerable<BookStoreApp.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}



<p>
    <a href="@Url.Action("Create","Books")" class="btn">Thêm sách</a>
</p>
<table class="table">
    <tr>
        <th>
            Sách
        </th>
        <th>
            Giá
        </th>


        <th>
            Tác giả
        </th>
        <th>
            Danh mục
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Content/Images/@item.Image" style="width:100px; height:110px;" />
                @Html.DisplayFor(modelItem => item.Book_Name)
            </td>





            <td>
                @Html.DisplayFor(modelItem => item.PriceHire)
            </td>



            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookCategory.Name_BookCategory)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID_Book }) |

                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_Book })
            </td>
        </tr>
    }

</table>
